{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",

    "tasks": [
        {
            "label": "Compile Library",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "command": "javac",
            "args": [
                "-verbose",
                "-d",
                "bin",
                "-cp",
                "lib\\*.jar",
                "src\\frdk\\*.java",
                "src\\frdk\\input\\*.java",
                "src\\frdk\\ui\\*.java"
            ],
            "problemMatcher": []
        },
        {
            "label": "Run TestApp",
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "command": "java -cp \\\"bin;lib/*\\\" frdk/uiTestApp",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Create JAR",
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "command": "jar cvfm frdk.jar frdk.mf -C bin .",
            "problemMatcher": []
        },
        {
            "label": "Clean bin",
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "command": "del -R bin\\*",
            "problemMatcher": []
        }
    ]
}
